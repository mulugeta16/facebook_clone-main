<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <ul class="btn-group btn-group-sm">
                <li class="col-md-12"><h3>Username: <%= user.name %></h3></li>
                <li class="col-md-12"><h3>Email: <%= user.email %></h3></li>
              </ul>
                <button type="button" class="btn btn-info"><%= link_to 'See', user, data: { confirm: 'Are you sure?' } %></button>
                <button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_user_path(user), data: { confirm: 'Are you sure?' } %></button>
                <button type="button" class="btn btn-danger"><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></button>
      </tr>
    <% end %>
  </tbody>
</table>

